<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200903"
           xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200903"
           name="WebappSmoketestComposite">

    <component name="smoketest">
        <implementation.web/>
        <reference name="hello" target="HelloComponent"/>
        <reference name="employeeService" target="EmployeeService"/>
    </component>

    <component name="HelloComponent">
        <implementation.java class="org.fabric3.runtime.webapp.smoketest.HelloServiceImpl"/>
        <property name="greeting">Hello World</property>
    </component>

    <component name="EmployeeService" requires="sca:managedTransaction">
        <implementation.java class="org.fabric3.runtime.webapp.smoketest.EmployeeServiceImpl"/>
    </component>


</composite>
