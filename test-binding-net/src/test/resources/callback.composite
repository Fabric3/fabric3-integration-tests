<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:f3-core="urn:fabric3.org:core"
           xmlns:f3-binding="urn:fabric3.org:binding"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           targetNamespace="org.codehaus.fabric3"
           name="CallbackComposite"
           autowire="false">

    <component name="AsyncCallbackTest">
        <f3-impl:junit class="org.fabric3.tests.binding.harness.callback.AsyncCallbackTest"/>
        <reference name="client" target="AsyncClientService/AsyncClientService"/>
    </component>

    <component name="AsyncClientService">
        <implementation.java class="org.fabric3.tests.binding.harness.callback.AsyncClientServiceImpl"/>
        <reference name="service">
            <binding.http uri="http://127.0.0.1:8282/asyncForwardService">
                <wireFormat.json/>
            </binding.http>
            <callback>
                <binding.http uri="/asyncClientServiceCallback">
                    <wireFormat.json/>
                </binding.http>
            </callback>
        </reference>
    </component>

    <component name="AsyncForwardService">
        <implementation.java class="org.fabric3.tests.binding.harness.callback.AsyncForwardServiceImpl"/>
        <service name="AsyncForwardService">
            <binding.http uri="/asyncForwardService">
                <wireFormat.json/>
            </binding.http>
            <callback>
                <binding.http uri="http://127.0.0.1:8282/asyncClientServiceCallback">
                    <wireFormat.json/>
                </binding.http>
            </callback>
        </service>
    </component>


</composite>
