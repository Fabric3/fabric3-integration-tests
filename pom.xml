                <module>tests-cluster-apps</module>
                <module>test-fabric-node</module>
                <!--<module>test-fabric-node-cluster</module>-->
            </modules>
        </profile>
        <profile>
            <id>bamboo-function</id>
            <modules>
                <module>test-binding-harness</module>
                <module>test-function</module>
