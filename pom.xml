        </profile>
        <profile>
            <id>bamboo-ws</id>
            <modules>
                <module>test-binding-metro</module>
                <module>test-wsdl</module>
                <module>tests-ws</module>
            </modules>
        </profile>
        <profile>
            <id>bamboo-jms</id>
            <modules>
