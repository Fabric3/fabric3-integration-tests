<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           name="WebappSmoketestComposite"
           targetNamespace="urn:fabric3.org"
           autowire="false">

    <component name="smoketest">
        <implementation.web/>
        <reference name="context" target="ContextTest"/>
        <reference name="composite" target="CompositeTest"/>
        <reference name="stateless" target="StatelessTest"/>
        <reference name="counter" target="CounterService"/>
    </component>

    <component name="ContextTest">
        <implementation.java class="org.fabric3.runtime.webapp.smoketest.ContextTest"/>
    </component>

    <component name="CompositeTest">
        <implementation.java class="org.fabric3.runtime.webapp.smoketest.CompositeTest"/>
    </component>

    <component name="StatelessTest">
        <implementation.java class="org.fabric3.runtime.webapp.smoketest.StatelessTest"/>
    </component>

    <component name="CounterService">
        <implementation.java class="org.fabric3.runtime.webapp.smoketest.CounterServiceImpl"/>
    </component>

</composite>
