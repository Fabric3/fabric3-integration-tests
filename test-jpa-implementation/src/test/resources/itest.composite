<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:f3-core="urn:fabric3.org:core"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           name="JpaTestComposite">

    <!-- Unit test -->
    <component name="EmployeeServiceImplTest">
        <f3-impl:junit class="org.fabric3.jpa.service.EmployeeServiceImplTest"/>
        <reference name="employeeService" target="EmployeeService"/>
    </component>

    <!-- Employee Service -->
    <component name="EmployeeService" requires="sca:managedTransaction">
        <implementation.java class="org.fabric3.jpa.service.EmployeeServiceImpl"/>
        <reference name="employeeDao" target="EmployeeDao"/>
    </component>

    <!-- Employee DAO -->
    <component name="EmployeeDao">
        <f3-impl:implementation.jpa persistenceUnit="employee"/>
    </component>

</composite>
