<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
    <persistence-unit name="employee" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>EmployeeDS</jta-data-source>
        <class>org.fabric3.jpa.model.Employee</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.transaction.manager_lookup_class"
                      value="org.fabric3.jpa.hibernate.F3HibernateTransactionManagerLookup"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <!-- property name="hibernate.cglib.use_reflection_optimizer" value="false"/-->
        </properties>
    </persistence-unit>
</persistence>