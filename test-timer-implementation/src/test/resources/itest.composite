<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           xmlns:f3-other="urn:fabric3.org:other"
           xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           targetNamespace="org.codehaus.fabric3"
           name="TestComposite"
           autowire="true">

    <component name="TimerTestComponent">
        <f3-impl:junit class="org.fabric3.tests.timer.TimedComponentTest"/>
        <reference name="latchService" target="LatchService"/>
        <reference name="trxLatchService" target="TrxLatchService"/>
    </component>

    <component name="LatchService">
        <implementation.java class="org.fabric3.tests.timer.LatchServiceImpl"/>
        <property name="count">2</property>
    </component>

    <component name="TrxLatchService">
        <implementation.java class="org.fabric3.tests.timer.LatchServiceImpl"/>
        <property name="count">2</property>
    </component>

    <component name="TimerComponent">
        <f3-impl:implementation.timer class="org.fabric3.tests.timer.TimedComponent" repeatInterval="100"/>
        <property name="property">value</property>
        <reference name="latchService" target="LatchService"/>
    </component>

    <component name="TrxTimerComponent">
        <f3-impl:implementation.timer poolName="TestPool" class="org.fabric3.tests.timer.TransactionalTimedComponent" requires="sca:managedTransaction" repeatInterval="100"/>
        <reference name="latchService" target="TrxLatchService"/>
    </component>

    <f3-other:timer.pool name="TestPool" size="5"/>

</composite>
